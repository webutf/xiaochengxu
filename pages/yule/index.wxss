.header {  
  width: 100%;  
  height: 80rpx;
  border-bottom: 1rpx solid #eee;  
  line-height: 79rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999999;
  background: #09bb07;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
}  
.swiper-tab {  
  font-size: 30rpx;  
  color: #fff;  
  border-bottom:4rpx solid #09bb07;
}  
.on { 
  color: #000;  
  border-bottom: 5rpx solid #fff;
}  

.menubar{
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 80rpx;
  background: #f4f5f6;
  position: fixed;
  left:0;
  z-index: 9999999;
  top: 80rpx;
  white-space: nowrap;
}

.swiper-box {
  padding: 100rpx 10px 10px 10px;
  overflow: hidden;
  box-sizing: border-box;
}

.scroll-view {
  height: 100%;
}
.content {
  margin-bottom: 60rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.content-header {
  padding: 20rpx 0 10rpx 140rpx;
  height: 120rpx;
  position: relative;
  line-height: 60rpx;
}
.content-header image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 40rpx;
  float: left;
  position: absolute;
  top: 18rpx;
  left: 0;
}
.content-image {
  width: 100%;
  margin-top:20rpx;
}
